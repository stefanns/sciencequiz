<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#0d47a1</item>
        <item name="colorPrimaryDark">#002171</item>
        <item name="colorAccent">#0d47a1</item>
        <item name="android:colorButtonNormal">@color/colorCard</item>
    </style>
    <!-- For title-->
    <style name="title">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textColor">#000000</item>
    </style>
    <!-- For questions -->
    <style name="questions">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/question_answers</item>
        <item name="android:layout_marginLeft">@dimen/question_answers</item>
        <item name="android:layout_marginRight">@dimen/question_answers</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textColor">#000000</item>
    </style>
    <!-- for checkboxes. -->
    <style name="checkbox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/question_answers</item>
        <item name="android:layout_marginLeft">@dimen/question_answers</item>
        <item name="android:layout_marginRight">@dimen/question_answers</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textColor">#000000</item>
    </style>
    <!-- for radio buttons -->
    <style name="radio_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/question_answers</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/rubik_regular</item>
        <item name="android:textColor">#000000</item>
    </style>
    <!-- for images -->
    <style name="image">
        <item name="android:padding">@dimen/below_image</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <!-- for the main title image -->
    <style name="titleImage">
        <item name="android:padding">@dimen/below_image</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <!-- for edit text -->
    <style name="editText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:backgroundTint">#0d47a1</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:paddingLeft">@dimen/edit_text</item>
        <item name="android:paddingRight">@dimen/edit_text</item>
    </style>
    <!-- for linear layout inside CardView -->
    <style name="linearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/outside_box</item>
        <item name="android:paddingTop">@dimen/outside_box</item>
    </style>


</resources>
